{
  "name": "hmt-escrow",
  "version": "0.14.5",
  "description": "Launch escrow contracts to the HUMAN network",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "verify": "hardhat verify",
    "lint": "eslint . --fix",
    "test": "hardhat test",
    "test:e2e": "scripts/e2e",
    "test:gas": "RUN_EVM=true REPORT_GAS=true scripts/test",
    "test:coverage": "scripts/coverage"
  },
  "scriptsComments": {
    "compile": "Runs compilation for all contracts in the project. The compiled artifacts will be saved in the artifacts/ directory. Ex.: npm run compile",
    "deploy": "Runs the deployment script to the specified network. Ex.: npm run deploy --network=localhost",
    "verify": "Runs the contract verification process and makes the source code public. Ex.: npm run verify --network=goerli",
    "test": "Runs contract tests. Ex.: npm run test",
    "test:gas": "Runs a measurement to get an indication of how much gas is being used based on your tests. Ex.: npm run test:gas",
    "test:coverage": "Runs measuring test coverage in the project. Ex.: npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hCaptcha/hmt-escrow.git"
  },
  "keywords": [
    "ethereum"
  ],
  "authors": [
    "HUMAN Protocol"
  ],
  "license": "MIT",
  "homepage": "https://github.com/hCaptcha/hmt-escrow#readme",
  "dependencies": {
    "@openzeppelin/contracts": "3.1.0",
    "ethereumjs-wallet": "^1.0.0",
    "web3-provider-engine": "https://github.com/MetaMask/web3-provider-engine.git"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@gemunion/cross-env": "0.0.3",
    "@gemunion/eslint-config": "0.1.9",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@tenderly/hardhat-tenderly": "^1.1.6",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "chai": "^4.3.6",
    "dotenv": "^6.0.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "16.0.3",
    "eslint-import-resolver-ts": "0.4.2",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-jest": "24.4.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-mocha": "4.11.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.5.1",
    "eslint-plugin-standard": "4.1.0",
    "ethers": "^5.7.0",
    "hardhat": "^2.11.1",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
